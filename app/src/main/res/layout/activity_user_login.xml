<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="de.vkay.updateapps.User.UserLogin"
    android:orientation="vertical"
    android:background="@color/userLoginBg">

    <ImageView
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="75dp"
        android:src="@drawable/icons_einstellungen"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:gravity="center_horizontal"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="100dp"
            android:text="Benutzer: "
            android:textSize="18dp"
            android:gravity="center_vertical"
            android:id="@+id/user_tv_username"
            android:layout_height="40dp" />

        <EditText
            android:layout_width="160dp"
            android:layout_toRightOf="@+id/user_tv_username"
            android:maxLines="1"
            android:maxLength="25"
            android:id="@+id/user_edit_username"
            android:inputType="textPersonName"
            android:layout_height="40dp" />

        <TextView
            android:layout_width="100dp"
            android:text="Passwort: "
            android:gravity="center_vertical"
            android:layout_below="@id/user_tv_username"
            android:layout_marginTop="10dp"
            android:textSize="18dp"
            android:id="@+id/user_tv_userpassword"
            android:layout_height="40dp" />

        <EditText
            android:layout_width="160dp"
            android:id="@+id/user_edit_userpassword"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/user_tv_userpassword"
            android:layout_below="@+id/user_edit_username"
            android:inputType="textPassword"
            android:layout_height="40dp" />

    </RelativeLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="45dp"
        android:text="Login"
        android:id="@+id/user_btn_login"
        android:background="@color/userLoginBgBtn"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="100dp"
            android:gravity="center"
            android:layout_height="40dp"
            android:id="@+id/user_tv_register"
            android:text="Registrieren" />


    </RelativeLayout>

</LinearLayout>
