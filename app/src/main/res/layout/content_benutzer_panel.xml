<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="4dp"
    android:animateLayoutChanges="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/cardViewBGDarK"
        android:layout_margin="8dp"
        android:layout_marginBottom="20dp"
        android:paddingBottom="20dp"
        android:visibility="visible"
        android:id="@+id/benutzer_panel_view_anpassen">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Anpassungen"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    app:errorEnabled="true"
                    android:textColorHint="@color/TextInputLayoutColorhint"
                    android:id="@+id/benutzer_panel_textinput_newname"
                    app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

                    <android.support.design.widget.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Neuer Name"
                        android:inputType="textPersonName"
                        android:maxLines="1"
                        android:id="@+id/benutzer_panel_textedit_newname"/>

                </android.support.design.widget.TextInputLayout>

                <Button
                    android:layout_width="0dp"
                    android:layout_marginStart="10dp"
                    android:layout_height="wrap_content"
                    android:text="Ändern"
                    android:id="@+id/benutzer_panel_btn_pruefname"
                    android:background="@color/buttonBG"
                    android:layout_weight="1"/>

            </LinearLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_height="wrap_content"
                android:text="Fertig"
                android:id="@+id/benutzer_panel_btn_closeedit"
                android:layout_gravity="right"
                android:background="@android:color/transparent" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/cardViewBGDarK"
        android:layout_margin="5dp"
        android:layout_marginBottom="20dp"
        android:paddingBottom="20dp"
        android:id="@+id/benutzer_panel_view_usercard">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="ändern"
                    android:textSize="11sp"
                    android:id="@+id/benutzer_panel_changetext"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        android:src="@mipmap/ic_launcher"
                        android:id="@+id/benutzer_panel_avatar"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/benutzer_panel_avatar"
                        android:text="Benutzername"
                        android:gravity="center"
                        android:layout_marginTop="20dp"
                        android:textSize="22dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textStyle="bold"
                        android:id="@+id/benutzer_panel_username"/>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/cardViewBGDarK"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="20dp"
                android:id="@+id/benutzer_panel_ll_meine_beitraege">

                <Button
                    android:layout_width="0dp"
                    android:layout_weight="7"
                    android:background="@android:color/transparent"
                    android:textAlignment="textStart"
                    android:layout_height="wrap_content"
                    android:text="Meine Beiträge"
                    android:clickable="false"/>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_action_next"
                    android:layout_weight="1"
                    android:clickable="false"/>

            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dip"
                android:background="@color/grey" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="20dp"
                android:id="@+id/benutzer_panel_ll_einstellungen">

                <Button
                    android:layout_width="0dp"
                    android:layout_weight="7"
                    android:background="@android:color/transparent"
                    android:textAlignment="textStart"
                    android:layout_height="wrap_content"
                    android:text="Einstellungen"
                    android:clickable="false"/>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_action_next"
                    android:layout_weight="1"
                    android:clickable="false"/>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/cardViewBGDarK"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="20dp">

                <Button
                    android:layout_width="0dp"
                    android:layout_weight="7"
                    android:background="@android:color/transparent"
                    android:textAlignment="textStart"
                    android:layout_height="wrap_content"
                    android:text="Ausloggen"
                    android:id="@+id/benutzer_panel_btn_logout"/>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>