<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rec_feedback_cardview"
    style="@style/CardViewDark"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Von: Viktor"
            android:id="@+id/rec_feedback_author"
            android:textSize="12dp"
            android:maxLines="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="vor 3 Tagen"
            android:layout_alignParentEnd="true"
            android:gravity="end"
            android:textSize="11sp"
            android:id="@+id/rec_feedback_date" />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kommentar"
        android:textSize="16sp"
        android:paddingTop="10dp"
        android:textStyle="bold"
        android:visibility="gone"
        android:id="@+id/rec_feedback_art"/>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ein Text, der hier einfach steht. \nEin Text, der keine weitere Bedeutung aufweiÃŸt.\nEin Text, den man so stehen lassen kann. \n\n - poetisch, nicht?"
        android:layout_marginBottom="5dp"
        android:id="@+id/rec_feedback_message"/>

</LinearLayout>
    </android.support.v7.widget.CardView>