<?xml version="1.0" encoding="utf-8"?>
    <android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="de.vkay.updateapps.AppUebersicht.AUMain"
        android:padding="@dimen/activity_horizontal_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/cardViewBGDarK"
                app:cardCornerRadius="2dp"
                app:cardElevation="3dp"
                app:contentPadding="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="120dp"
                        android:src="@mipmap/ic_launcher"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/austart_imageIcon"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/austart_imageIcon"
                        android:paddingTop="10dp"
                        android:textSize="18dp"
                        android:gravity="center_horizontal"
                        android:layout_marginBottom="10dp"
                        android:textStyle="bold"
                        android:text="h"
                        android:id="@+id/austart_version"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/austart_imageIcon"
                        android:layout_below="@id/austart_version"
                        android:textSize="16dp"
                        android:gravity="center"
                        android:layout_marginBottom="10dp"
                        android:textStyle="bold|italic"
                        android:text="20.11.2015"
                        android:id="@+id/austart_date"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/austart_date"
                        android:text="Herunterladen"
                        style="@style/ButtonMaterialDarkBlue"
                        android:layout_toRightOf="@id/austart_imageIcon"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="30dp"
                        android:layout_marginBottom="8dp"
                        android:layout_alignParentEnd="true"
                        android:id="@+id/austart_btn_download"/>

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:buttonTint="@android:color/white"
                        android:id="@+id/austart_checkbox_notify"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <View
                android:layout_width="fill_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:layout_height="3dip"
                android:background="@color/grey" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                android:text="Beschreibung"/>

            <TextView
                android:id="@+id/austart_beschreibung"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Diese App ist für Updates zuständig. Eine Internetverbindung ist erforderlich."/>


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>